@using LibraryProject.Models;
@model List<Magazine>
<table class="table">
    <tr>
        <th align="left">
            Name
        </th>
        <th align="left">
            Category
        </th>
        <th align="left">
            Publisher
        </th>
        <th align="left">
            Price
        </th>
        <th align="left">
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td align="left">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="left">
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td align="left">
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td align="left">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td align="left">
                @Html.ActionLink("Edit magazine", "EditMagazine", new { id = item.Id })
                @Html.ActionLink("Show", "ShowMagazine", new { id = item.Id })
                @Html.ActionLink("Delete", "DeleteMagazine", "Home", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Model delete" })
            </td>
        </tr>
    }
    <tr>
        <td align="left">
            @Html.ActionLink("Save txt list", "GetMagazinesList", new { }, new { @class = "button button-saver" })
            @Html.ActionLink("Save xml list", "GetMagazinesXmlList", new { }, new { @class = "button button-saver" })
            @Html.ActionLink("Save list to DB", "GetDatabaseMagazineList", new { }, new { @class = "button db-saver" })
        </td>
    </tr>
    <p>
        @Html.ActionLink("Create New", "CreateMagazine", "Home", new { }, new { @class = "button" })
    </p>

    <div>
        @using (Html.BeginForm())
        {
            @Html.TextBox("publisherName", Session["PublisherName"], new { size = "5" })
            <input type="submit" formaction="/Home/GetPublisherList/magazine" class="button" value="Sort by publishers" />
            <input type="submit" formaction="/Home/GetAllPublisher/magazine" class="button" value="Get all publishers" />
        }
    </div>
</table>